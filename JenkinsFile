node {

   stage('Source Code Extraction'){
       
           echo 'Source Code Extraction'
           checkout changelog: false, poll: false, scm: [$class: 'GitSCM', branches: [[name: '*/demo']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/tsangwailok/icp.git']]]
    
        
    }
    stage('Maven Build'){
        echo 'Maven Build'
        withMaven(maven: 'M3') {
            sh "mvn -e install"
        }
    }
    stage('Maven deploy package'){
        echo 'Maven Build'
        withMaven(maven: 'M3') {
            sh "mvn -f ./CustomerOrderServicesApp/pom.xml -X deploy -Dfile=CustomerOrderServicesApp.ear"
        }
    }
    stage('Docker Image Build'){
    	node ('slave_192_168_39_155') {
		echo 'Docker Image Preparation'
			sh "docker build -t 'customer-order-demo:liberty' ."
	}
    }
}

node {

   stage('Source Code Extraction'){
       
           echo 'Source Code Extraction'
           checkout changelog: false, poll: false, scm: [$class: 'GitSCM', branches: [[name: '*/demo']], doGenerateSubmoduleConfigurations: false, extensions: [[$class: 'CloneOption', timeout: 1200]], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/tsangwailok/icp.git']]]
    
        
    }
    stage('Maven Build'){
        echo 'Maven Build'
        withMaven(maven: 'M3') {
            sh "mvn -e install"
        }
    }
    stage('Maven deploy package'){
        echo 'Maven Build'
        withMaven(maven: 'M3') {
            sh "mvn -f ./CustomerOrderServicesApp/pom.xml -X deploy -Dfile=CustomerOrderServicesApp.ear"
        }
    }
    stage('Docker Image Preparation'){
        echo 'Docker Image Preparation'
        waitUntil{
            //docker.withRegistry('https://${DOCKER_HOST}', 'docker') {
            docker.withRegistry('https://icptt.icp:8500', 'docker') {
                def customImage = docker.build("customer-order-services-demo:${env.BUILD_ID}")
                customImage.push()
            }
        }
    }
}
